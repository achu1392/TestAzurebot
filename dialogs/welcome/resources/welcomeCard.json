{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url" :"https://images-na.ssl-images-amazon.com/images/I/61y9SUOEqOL._SL1000_.jpg",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Sample Block!",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "yes",
      "text": "Below are some sample controls",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Go to google",
      "url": "https://www.google.com"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Go to facebook",
      "url": "https://www.facebook.com"
    },
    {
      "type": "Action.Submit",
      "title": "Tomato",
      "data": "Tomato"
     
    },
    {
      "type" : "Input.Date",
      "id" :"DateValue"
    }
  ]
}