{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url" :"https://www.brandcrowd.com/gallery/brands/pictures/picture14323705647889.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Choose the shape of your cake!",
      "wrap": true,
      "maxLines": 0
    },
    {
      
        "type" : "Input.ChoiceSet",
        "id" :"Shape",
        "choices":["Triangle","Rectangle","Square"]
      
    },
    
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "yes",
      "text": "Choose the colour for your cake ! ",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "Image",
      "url" :"https://docs.microsoft.com/en-us/powerapps/developer/model-driven-apps/media/charts-accounts-by-industry.gif",
      "size": "stretch"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Go to google",
      "url": "https://www.google.com"
    },
    {
      "type": "Action.Submit",
      "title": "Potato",
      "data": "Potato"
    }
  ]
  
}